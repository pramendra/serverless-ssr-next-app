{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "es2018"],
    "rootDir": "./",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "jsx": "react"
  },
  "typeRoots": ["node_modules/@types", "./types"],
  "include": ["./src/**/*", "./tests/**/*.test.ts", "./types/**/*.ts"],
  "exclude": ["node_modules", "./.serverless/**/*", "./.build/**/*"]
}
