{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["es2018"],
    "rootDir": "./",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "typeRoots": ["node_modules/@types", "./types"],
  "include": ["./src/**/*", "./tests/**/*", "./types/**/*.ts"],
  "exclude": ["node_modules", "./.serverless/**/*", "./.build/**/*"]
}
