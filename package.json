{
  "name": "serverless-ssr-next-app",
  "version": "0.1.0",
  "description": "Express server using serverless-framework deployed on GCP using github actions CI/CD",
  "keywords": [
    "nodejs",
    "serverless",
    "google cloud functions",
    "nvm",
    "dotenv",
    "typescript",
    "prettier",
    "eslint",
    "husky",
    "vscode"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pramendra/serverless-ssr-next-app.git"
  },
  "main": "src/index.js",
  "scripts": {
    "next:build": "next build src/app",
    "next:start": "next start src/app",
    "next:dev": "NODE_ENV=dev dotenv -e .env -- node --inspect=5858 -r ts-node/register src/server.ts | ./node_modules/.bin/pino-pretty",
    "format": "prettier --write src",
    "lint": "eslint src/**/*",
    "lint:fix": "eslint --fix src/**/*",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "NODE_ENV=dev nodemon",
    "local:build": "rm -rf .build && npm run next:build && ./node_modules/.bin/serverless invoke local -f first",
    "local:run": "NODE_ENV=production functions-framework --target=http",
    "sls:deploy": "rm -rf .build && npm run next:build && ./node_modules/.bin/serverless deploy"
  },
  "author": "Pramendra Gupta <pramendra@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.38",
    "@types/serverless": "^1.72.2",
    "@types/webpack": "^4.41.17",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.7",
    "dotenv-cli": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-express": "^1.12.0",
    "lint-staged": "^10.2.10",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "serverless": "^1.73.1",
    "serverless-dotenv-plugin": "^2.4.2",
    "serverless-google-cloudfunctions": "*",
    "serverless-plugin-typescript": "^1.1.9",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^1.6.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-prismic": "^1.0.7",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
    "graphql-tag": "^2.10.3",
    "next": "^9.4.4",
    "next-routes": "^1.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
